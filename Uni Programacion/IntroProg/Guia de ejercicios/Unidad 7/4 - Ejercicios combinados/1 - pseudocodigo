# Inicializacion de variables

kwhConsumo = 0
totalPagar = 0

# Declaracion de constantes

MONTOFIJO = 300
KWH = 10

# Ingreso de datos

mostrar ("Ingrese la cantidad de kWh consumidos: ")
leer (kwhConsumo)

# Operacion

totalPagar = (kwhConsumo * KWH) + MONTOFIJO

# Muestra de informacion

mostrar ("La suma a pagar es de: $" + totalPagar)